<%= form_for (@contacto) do |f| %>
<% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('avisoerror')%></h2>

      <ul>
      <% @contacto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

 <div class="field">
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t :infoEs %><br />
    <%= f.text_area :infoEs,:size=>'55x10' %>
  </div>
  <div class="field">  
    <%= f.label t :infoFr%><br />
    <%= f.text_area :infoFr,:size=>'55x10' %>
   </div>
    <div class="field">
    <%= f.label t :descripciones %><br />
    <%= f.text_area :descripciones,:size=>'55x10' %>
  </div>
  <div class="field">  
    <%= f.label t :descripcionfr%><br />
    <%= f.text_area :descripcionfr,:size=>'55x10' %>
   </div>
   <%if current_user.tipo=='traductor'%>
	 <div class="field">
		<%= f.label t :revisado %>
		<%= f.check_box :revisado%>
		<%= f.label t :revisadofr %>	
		<%= f.check_box :revisadofr %>
	  </div>
   <%else%>
	<%= f.hidden_field :revisadofr,:value=>false %>
	<%= f.hidden_field :revisado,:value=>false %>
  <%end%>
  <div class="actions">
    <%= f.submit(t('save'), :class=>"button") %>
  </div>
<% end %>
