<%= form_for @evento, :html => {:multipart => true} do |f| %>
 <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label t(:fecha) %><br />
    <%= f.datetime_select :fecha %>
  </div>
  <div class="field">
    <%= f.label t(:tituloEs) %><br />
    <%= f.text_field :tituloEs %>
  </div>
  <div class="field">
    <%= f.label t(:tituloFr) %><br />
    <%= f.text_field :tituloFr %>
  </div>
   <%if current_user.tipo=='traductor'%>
  <div class="field">
    <%= f.label t :revisado %><br />
    <%= f.check_box :revisado %>
  </div>
  <%else%>
  <%  f.hidden_field(:revisado)%>
  <%end%>
<div class="field">
        <label><%=t('imagen')%></label>
      <%= f.file_field :imagen  %>
    </div>

   <div class="field">
        <label>
          <%= f.check_box :remove_imagen %>
          <%=t('destroy')+' '+t('image')  %>
        </label>
    </div>



  <div class="actions">
    <%= f.submit(t('save')) %>
  </div>
<% end %>
