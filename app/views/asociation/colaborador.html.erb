<%= render :partial => "/shared/titulo",:locals => {:title => t('aportan')}%>
<div class="ficha ">


<% hola="" %>
<% if !@aportan.nil?%>
		<% @aportan.each do |colaborador| %>
		<% hola+="<div class='colaborador'>" %>
			<%if spanish %>
			<% hola+="<h4>"+colaborador.nombreEs+"</h4>" %>
			<%else%>
			<% hola+="<h4>"+colaborador.nombreFr+"</h4>" %>
			<%end%>
			<% hola+="<h4>"+colaborador.url+"</h4>" %>		
				<% hola+="<h4>"+colaborador.method(:info.to_s+local.capitalize).call+"</h4>" %>			
					<% if colaborador.imagen_url.to_s != "" %>
				<%= image_tag colaborador.imagen_url.to_s %>
			<%  end %>
					<% 	hola+="</div>" %>
		<%end%>
	
	<%end%>
	
	   <%= render :partial => "/shared/modulo_ficha", :locals => {
:title => t('aportan'), 
:texto=>hola.html_safe}
%>                 

