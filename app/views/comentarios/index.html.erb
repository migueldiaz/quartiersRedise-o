<table>
  <tr>
    <th><%=t('textoes')%></th>
    <th><%=t('textofr')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comentarios.each do |comentario| %>
  <tr>
    <td><%= truncate(comentario.textoes,:lenght=>40) %></td>
    <td><%= truncate(comentario.textofr,:lenght=>40) %></td>
  
    <td><%= link_to t('show'), comentario_path(comentario,:vista=>'gestion') %></td>
    <td><%= link_to t('edit'), edit_comentario_path(comentario,:vista=>'gestion') %></td>
    <td><%= link_to t('destroy'), comentario, :confirm => t('confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>

