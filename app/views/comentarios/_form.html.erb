<%= form_for(@comentario) do |f| %>
  <% if @comentario.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('avisoeror') %></h2>
	<ul>
      <% @comentario.errors.full_messages.each do |msg| %>
        <li><%= t(msg) %></li>
      <% end %>
      </ul>
    
    </div>
  <% end %>
   <%= f.text_field :foro_id %>
  <%= f.text_field :comentario_id,:value=>params[:responde] %>
  <%if spanish%>
  <div class="field">
    <%= f.label t :textoes %><br />
    <%= f.text_area :textoes,:size=>'30x15' %>
  </div>
  <%else%>
  <div class="field">
    <%= f.label t :textofr %><br />
    <%= f.text_area :textofr ,:size=>'30x15'%>
  </div>
  <%end%>
 
  <div class="actions">
    <%= f.submit(t('send'))%>
  </div>
<% end %>
