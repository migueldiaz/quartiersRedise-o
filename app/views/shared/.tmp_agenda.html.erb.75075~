<div class="evento">
	 		<a name="evento<%=evento.id%>"></a> 

  <h2><%= l evento.fecha,:format => "%d/%m/%Y"%> -  <%=  evento.send(:titulo.to_s+locale.to_s.capitalize) %></h2>
   <% if evento.imagen_url.to_s != "" %>
   <%= render :partial => "/shared/img", :locals => {
:imagen=>evento.imagen_url, 
:enlace_imagen=>evento.imagen_url, 
:imagen_class=>"left",
:imagen_title=>""
}
%> 	
<%end%>

  <div>
  	<%
	texto=simple_format(evento.send(:descripcion.to_s+locale.to_s))
	arra=texto.scan(/\[.*?\]/)
	arra.each do |e|
	arrado=e.split("|")
	%>
  	<%=arrado[0].gsub(/\[/, "")	%>
	<%end %>
  	<%=  auto_link(simple_format(evento.send(:descripcion.to_s+locale.to_s))) %>
  </div>
  

</div>

<hr class="space">

<%end%>
