<h1><%=t('agenda')%></h1>
<hr class="space">
<% @eventos.each do |evento| %>
<div class="evento">
	
  <h2><%= l evento.fecha,:format => "%d/%m/%Y %H:%M"%> -  <%=  evento.send(:titulo.to_s+locale.to_s.capitalize) %></h2>
   <% if evento.imagen_url.to_s != "" %>
   <%= render :partial => "/shared/img", :locals => {
:imagen=>evento.imagen_url, 
:enlace_imagen=>evento.imagen_url, 
:imagen_class=>"left",
:imagen_title=>""
}
%> 	
<%end%>

  <div>
  	<%=  auto_link(simple_format(evento.send(:descripcion.to_s+locale.to_s))) %>
  </div>
  

</div>

<hr class="space">

<%end%>
