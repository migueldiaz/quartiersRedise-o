<div class="opciones_generales">
	<ul  >
		<%=render :partial=>"/shared/opcion_gestion",:locals => { :mensaje => t('new')+' usuario', :path_volver=>new_usuarioforo_path(:tipo=>params[:tipo]) } %>         
	</ul>
</div>
<div class="listado_registros_div">
	
 <table class="listado_registros">
 	   <%= render :partial => "/shared/cabecera_tabla_gestion", 
		:locals =>{ :n_columns=>7,:title=>t('usuariosforos'), :columns=>[t('nombre'), t('email'), t('idioma'),t('equipo'), t('show'), t('edit'), t('destroy')]} %>


<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.email %></td>
    <td><%= t(usuario.idioma) %></td>
    <td> <%if !usuario.equipo.nil?%><%= usuario.equipo.nombre %><%end%></td>
     <% if params[:tipo]=='traductor'%> 
    <td><%= t(usuario.traduceA) %></td>
    <%end%>
    <td><%= link_to t('show'), usuario %></td>
    <td><%= link_to t('edit'), edit_usuarioforo_path(usuario) %></td>
    <td><%= link_to t('destroy'), usuario, :confirm => t('confirm'), :method => :delete %></td>
  </tr>
<% end %>
  </table>
</div>




