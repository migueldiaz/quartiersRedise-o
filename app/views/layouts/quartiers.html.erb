			<ul><%=render 'asociation/paginas'%></ul>
		<%end%>
		<li><%=link_to t('colaboradores'),asociation_colaborador_path%></li>
		<li><%=link_to t('agenda'),asociation_agenda_path%></li>
		<li><%=link_to t('contacto'),asociation_contacto_path%></li>
	</ul>
	<%end%>
</li></ul>
</li></ul>
<h3><%=t('jeunes')%></h3>
