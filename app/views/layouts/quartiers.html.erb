		        </ul>
		    <%end%>
		<li><%=link_to t('colaboradores'),jeunes_colaborador_path%></li>
		<li><%=link_to t('agenda'),jeunes_agenda_path%></li>
		<li><%=link_to t('contacto'),jeunes_contacto_path%></li>
	</ul>
	<%end%>
</li></ul>
