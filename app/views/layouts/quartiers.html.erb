<title>Quartiers beta 0.7</title>
</head>
<body>

<div id="wrap">


<div id="header">
<h1><%=link_to 'Quartiers du monde',root_path%></h1>
<h2><%=t('description')%></h2>
</div>

<div id="contentwrap"> 

<div id="content">

    <%= yield %>

</div>

<div id="sidebar">

<h3><%=t('lasociacion')%> </h3>
<ul>
	<li><%=link_to t('lasociacion'),asociation_presentacion_path  %></li>
