<%= form_for(@foro) do |f| %>
  <% if @foro.errors.any? %>
    <div id="error_explanation">
      <h2><%=t('avisoerror')%></h2>

      <ul>
      <% @foro.errors.full_messages.each do |msg| %>
        <li><%= t(msg) %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :sitio_id %>
  <div class="field">
    <%= f.label t :tituloes %><br />
    <%= f.text_field :tituloes %>
  </div>
  
   <div class="field">
    <%= f.label t :descripciones %><br />
    <%= f.text_area :descripciones,:size=>'55x10' %>
  </div>
  <div class="field">
    <%= f.label t :descripcionfr %><br />
    <%= f.text_area :descripcionfr,:size=>'55x10' %>
  </div>
    <%if current_user.tipo=='traductor'%>
	 <div class="field">
		<%= f.label t :revisado %>
		<%= f.check_box :revisado%>
		<%= f.label t :revisadofr %>	
		<%= f.check_box :revisadofr %>
	  </div>
   <%else%>
	<%= f.hidden_field :revisadofr,:value=>false %>
	<%= f.hidden_field :revisado,:value=>false %>
  <%end%>
 
  <div class="actions">
    <%= f.submit(t('save')) %>
  </div>
<% end %>
