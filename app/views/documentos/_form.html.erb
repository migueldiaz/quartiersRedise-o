<br/>
<%= form_for @documento, :html => {:multipart => true} do |f| %>

  <div class="field">
    <%= f.label t :doces %><br />
    <%= f.text_field :doces %>
  </div>
  <div class="field">
    <%= f.label t :docfr %><br />
    <%= f.text_field :docfr %>
  </div>
  <%if current_user.tipo=='traductor'%>
  <div class="field">
    <%= f.label t :revisado %><br />
    <%= f.check_box :revisado %>
  </div>
  <%else%>
  <%  f.hidden_field(:revisado)%>
  <%end%>
 <div class="field">
        <label><%=t('eligeDoc')%></label>
        <%= f.file_field :archivo %>
    </div>

   <div class="field">
        <label>
          <%= f.check_box :remove_archivo %>
          <%= t('destroy')%>
        </label>
    </div>
  <div class="actions">
    <%= f.submit(t('save')) %>
  </div>
<% end %>
